<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="vboxAvatarMenu" alignment="CENTER" spacing="10.0" style="-fx-background-color: #1D2228;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="hboxChooseManu" spacing="10.0">
         <children>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Choose your avatar:" textFill="#e1e2e2" />
                  <ImageView fx:id="imgvAvatar" fitHeight="90.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </VBox>
            <VBox alignment="BOTTOM_CENTER" spacing="10.0">
               <children>
                  <Label text="Choose your nickname:" textFill="#e1e2e2" />
                  <TextField fx:id="txtfieldNickname" />
                  <Label fx:id="lblTooLarge" text="Too large" textFill="RED" visible="false" />
               </children>
               <HBox.margin>
                  <Insets bottom="4.0" />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
      <Button fx:id="btnOK" mnemonicParsing="false" prefWidth="60.0" style="-fx-background-color: #FB8122; -fx-background-radius: 0 0 0 0;" text="OK" textFill="#e1e2e2">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
