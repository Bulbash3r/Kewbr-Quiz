<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vboxAvatarMenu" alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="hboxChooseManu" spacing="10.0">
         <children>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Choose your avatar:" />
                  <ImageView fx:id="imgvAvatar" fitHeight="90.0" fitWidth="90.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </VBox>
            <VBox alignment="BOTTOM_CENTER" spacing="10.0">
               <children>
                  <Label text="Choose your nickname:" />
                  <TextField fx:id="txtfieldNickname" />
                  <Label fx:id="lblTooLarge" text="Too large" textFill="RED" visible="false" />
               </children>
               <HBox.margin>
                  <Insets bottom="4.0" />
               </HBox.margin>
            </VBox>
         </children>
      </HBox>
      <Button fx:id="btnOK" mnemonicParsing="false" prefWidth="60.0" text="OK" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
