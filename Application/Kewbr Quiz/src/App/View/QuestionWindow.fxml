<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox spacing="10.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
   <children>
      <TextArea fx:id="txtAreaQuestion" promptText="Question" />
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <TextField fx:id="txtFieldAnswer" prefWidth="200.0" promptText="Answer" />
            <Separator prefWidth="160.0" visible="false" />
            <Button fx:id="btnOk" mnemonicParsing="false" prefHeight="70.0" prefWidth="100.0" text="Ok" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
