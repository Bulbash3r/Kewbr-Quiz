<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="100.0" prefWidth="250.0" spacing="5.0" style="-fx-background-color: #1D2228;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Write path to pack" textFill="#e1e2e2">
          <font>
              <Font name="System Bold" size="12.0" />
          </font>
      </Label>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <TextField fx:id="txtFieldPath" style="-fx-background-color: #E1E2E2;" />
            <Button fx:id="btnChoose" mnemonicParsing="false" style="-fx-background-color: FB8122; -fx-background-radius: 0 0 0 0;" text="Choose" textFill="#e1e2e2">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
         </children>
      </HBox>
      <Button fx:id="btnOk" mnemonicParsing="false" prefWidth="56.0" style="-fx-background-color: FB8122; -fx-background-radius: 0 0 0 0;" text="Ok" textFill="#e1e2e2">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
   </children>
</VBox>
